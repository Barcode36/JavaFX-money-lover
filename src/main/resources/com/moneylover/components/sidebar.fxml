<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.moneylover.app.MainPresenter"
      stylesheets="@../../../assets/css/components/sidebar.css"
      styleClass="sidebar">
    <fx:include source="buttons/sidebar-button.fxml" onAction="#pressTransaction"
                fx:id="buttonTransaction"
                styleClass="transaction">
        <VBox.margin>
            <Insets>
                <top>10</top>
            </Insets>
        </VBox.margin>

        <text>Transactions</text>
        <styleClass>wallet</styleClass>
    </fx:include>

    <!--<fx:include source="buttons/sidebar-button.fxml" onAction="#pressDebt" styleClass="debt">-->
        <!--<text>Debts</text>-->
    <!--</fx:include>-->

    <fx:include source="buttons/sidebar-button.fxml" onAction="#pressReport"
                fx:id="buttonReport"
                styleClass="report">
        <text>Reports</text>
    </fx:include>

    <fx:include source="buttons/sidebar-button.fxml" onAction="#pressBudget"
                fx:id="buttonBudget"
                styleClass="budget">
        <text>Budgets</text>
    </fx:include>

    <fx:include source="buttons/sidebar-button.fxml" onAction="#pressWallet"
                fx:id="buttonWallet"
                styleClass="wallet">
        <text>Wallets</text>
    </fx:include>

    <fx:include source="buttons/sidebar-button.fxml" onAction="#pressFriend"
                fx:id="buttonFriend"
                styleClass="friends">
        <text>Friends</text>
    </fx:include>

    <fx:include source="buttons/sidebar-button.fxml" onAction="#pressUser"
                fx:id="buttonUser"
                styleClass="user">
        <text>User</text>
    </fx:include>

    <fx:include source="buttons/sidebar-button.fxml" onAction="#pressSignOut" styleClass="sign-out">
        <text>Sign out</text>
    </fx:include>
</VBox>
