<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@../../../../assets/css/content.css, @../../../../assets/css/pages/login.css"
      alignment="CENTER"
      styleClass="login__container">
    <ImageView fitHeight="90"
               fitWidth="150"
               styleClass="transaction__content__image">
        <Image url="@../../../../assets/images/money-lover-logo.png"
               backgroundLoading="true"/>
    </ImageView>
    <Text styleClass="font--size-20">SIGN UP</Text>

    <VBox styleClass="form__field-group">
        <Label text="Name"/>
        <TextField promptText="Name" styleClass="form__field" fx:id="name"/>
    </VBox>

    <VBox styleClass="form__field-group">
        <Label text="Email"/>
        <TextField promptText="Email" styleClass="form__field" fx:id="email"/>
    </VBox>

    <VBox styleClass="form__field-group">
        <Label text="Password"/>
        <PasswordField promptText="Password" styleClass="form__field" fx:id="password"/>
    </VBox>

    <VBox styleClass="form__field-group">
        <Label text="Confirm Password"/>
        <PasswordField promptText="Confirm Password" styleClass="form__field" fx:id="passwordConfirmation"/>
    </VBox>

    <fx:include source="../../components/buttons/normal-button.fxml" onAction="#signUp">
        <text>SIGN UP</text>
    </fx:include>

    <fx:include source="../../components/buttons/text-button.fxml" styleClass="sign-up-message" onAction="#changeScene">
        <text>Sign in here</text>
    </fx:include>
</VBox>
